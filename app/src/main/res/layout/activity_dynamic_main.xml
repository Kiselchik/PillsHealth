<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DynamicMainActivity">

    <Button
        android:id="@+id/toDynamicHealthBtn"
        style="@style/ButtonAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Самочувствие"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toDynamicSymptomBtn"
        style="@style/ButtonAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Измерения"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintStart_toStartOf="@+id/toDynamicHealthBtn"
        app:layout_constraintTop_toBottomOf="@+id/toDynamicHealthBtn" />

    <Button
        android:id="@+id/toDynamicCourseBtn"
        style="@style/ButtonAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Курсы"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/toDynamicSymptomBtn"
        app:layout_constraintTop_toBottomOf="@+id/toDynamicSymptomBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>