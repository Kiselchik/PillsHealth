<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="ButtonMain">
        ..
        <item name="android:background">@drawable/button_main</item>
        ..
    </style>
    <style name="ButtonAction">
        ..
        <item name="android:background">@drawable/button_action</item>
        ..
    </style>

    <style name="ButtonAdd">
        ..
        <item name="android:background">@drawable/button_add</item>
        ..
    </style>
    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/colorLightPrimary</item>
    </style>
    <style name="MyCardCourse" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

</resources>