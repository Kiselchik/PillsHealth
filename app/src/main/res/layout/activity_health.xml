<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.HealthActivity">


    <Button
        android:id="@+id/enterHealth"
        style="@style/ButtonAction"
        android:layout_width="153dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Отметить самочувствие"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toEnterSymptom"
        style="@style/ButtonAction"
        android:layout_width="153dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Статистика"
        android:textColor="@color/colorTextIcons"
        app:layout_constraintStart_toEndOf="@+id/enterHealth"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allHealth"
        android:layout_width="296dp"
        android:layout_height="444dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterHealth" />


</androidx.constraintlayout.widget.ConstraintLayout>